<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알레르기 모두 체크"
            android:textSize="25dp"
            android:layout_margin="15dp"
            android:gravity = "center"
            />
        <TableRow>

            <CheckBox
                android:id="@+id/checkFowl"
                android:text="난류"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                android:gravity="center"
                />

            <CheckBox
                android:id="@+id/checkMilk"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                android:text="우유" />
            <CheckBox
                android:id="@+id/checkBuckwheat"
                android:text="메밀"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />

            <CheckBox
                android:id="@+id/checkPeanut"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                android:text="땅콩" />


        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/checkBean"
                android:text="대두"
                android:background="@color/grayColor"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                />
            <CheckBox
                android:id="@+id/checkWheat"
                android:text="밀"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />
            <CheckBox
                android:id="@+id/checkMackerel"
                android:text="고등어"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />
            <CheckBox
                android:id="@+id/checkcrab"
                android:text="게"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />
        </TableRow>




        <TableRow>

            <CheckBox
                android:id="@+id/checkShrimp"
                android:text="새우"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />

            <CheckBox
                android:id="@+id/checkPork"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                android:text="돼지" />

            <CheckBox
                android:id="@+id/checkPeach"
                android:text="복숭아"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />
            <CheckBox
                android:id="@+id/checkTomato"
                android:text="토마토"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />
        </TableRow>


        <TableRow>

            <CheckBox
                android:id="@+id/checkSulfurous"
                android:text="아황산"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />
            <CheckBox
                android:id="@+id/checkWalnut"
                android:text="호두"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />
            <CheckBox
                android:id="@+id/checkChicken"
                android:text="닭고기"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />
            <CheckBox
                android:id="@+id/checkBeef"
                android:text="쇠고기"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/checkSquid"
                android:text="오징어"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />
            <CheckBox
                android:id="@+id/checkClam"
                android:text="조개류"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지병 모두 체크"
            android:textSize="25dp"
            android:layout_margin="15dp"
            android:gravity = "center"
            />
        <TableRow>

            <CheckBox
                android:id="@+id/diabetes"
                android:text="당뇨"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                android:gravity="center"
                />

            <CheckBox
                android:id="@+id/highBloodPressure"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                android:text="고혈압" />
            <CheckBox
                android:id="@+id/lowBloodPressure"
                android:text="저혈압"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                />

            <CheckBox
                android:id="@+id/r1"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@color/grayColor"
                android:text="항" />

        </TableRow>

    </TableLayout>

    <!-- 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/resetAllergyCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:text="취소"/>

        <Button
            android:id="@+id/resetAllergySave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"/>

    </LinearLayout>

</LinearLayout>