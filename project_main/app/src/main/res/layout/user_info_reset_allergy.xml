<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="알레르기 모두 체크"
            android:textSize="25dp" />

        <TableRow>

            <CheckBox
                android:id="@+id/checkMilk"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:text="우유" />

            <CheckBox
                android:id="@+id/checkFowl"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:text="난류" />

            <CheckBox
                android:id="@+id/checkShellfish"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:text="갑각류" />

            <CheckBox
                android:id="@+id/checkFish"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:text="생선" />


        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/checkNuts"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:text="견과류" />

            <CheckBox
                android:id="@+id/checkBean"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:text="콩" />

            <CheckBox
                android:id="@+id/checkWheat"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:text="밀" />

            <CheckBox
                android:id="@+id/checkPeanut"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:text="땅콩" />
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/checkMeat"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:text="육류" />
        </TableRow>

    </TableLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="지병 모두 체크"
            android:textSize="25dp" />

        <TableRow>

            <CheckBox
                android:id="@+id/diabetes"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:gravity="center"
                android:text="당뇨" />

            <CheckBox
                android:id="@+id/highBloodPressure"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:text="고혈압" />

            <CheckBox
                android:id="@+id/hyperlipidemia"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:text="고지혈증"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/obesity"
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_checkbox"
                android:text="비만" />

        </TableRow>

    </TableLayout>

    <!-- 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/resetAllergyCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:background="@drawable/purple_btn"
            android:text="취소"
            android:textColor="#6844A8"
            android:textSize="18sp" />

        <android.widget.Button
            android:id="@+id/resetAllergySave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/purple_btn"
            android:text="저장"
            android:textColor="#6844A8"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>