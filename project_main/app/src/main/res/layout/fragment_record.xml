<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/glassbtn"
                android:drawablePadding="1dp"
                android:layout_marginLeft="10dp"
                android:text="검색하기"
                android:id="@+id/searchbtn"
                android:gravity="left"/>
            <Button
                android:id="@+id/barcodeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/barcodebtn"
                android:drawablePadding="1dp"
                android:layout_marginLeft="10dp"
                android:text="바코드 스캔"
                android:gravity="right" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/recordFoodName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="신라면"
                                android:textSize="23dp"
                                android:textColor="@android:color/background_dark"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/recordFoodKcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200 kcal"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/recordFoodInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="탄수화물 100g 단백질 100g 지방 100g "
                            android:textSize="12dp"/>
                    </LinearLayout>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/raw_material_text"
                    android:text="선택한 음식의 정보 출력\n...\n...\n...\n...\n...\n..."
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/morningBtn"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:text="아침"/>
            <Button
                android:id="@+id/lunchBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점심"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"/>
            <Button
                android:id="@+id/dinnerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:text="저녁"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">
            <Button
                android:id="@+id/recordBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="기록하기"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>