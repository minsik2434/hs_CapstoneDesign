<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="활동량 ?"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            >
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <RadioGroup
            android:id="@+id/rGroup4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RadioButton
                android:id="@+id/btnMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동 거의 안함"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                />
            <RadioButton
                android:id="@+id/btnLess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가벼운 활동(주 1~3회)"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                />

            <RadioButton
                android:id="@+id/btnGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보통 수준(주 3~5회)"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                />

            <RadioButton
                android:id="@+id/btnActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="적극적으로 운동(주 6~7회)"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                />

            <RadioButton
                android:id="@+id/btnMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매우 적극적으로 운동(주 6~7회)"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPre4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="이전" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />


            <Button
                android:id="@+id/btnNext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="다음" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="진행률 4/4"
                android:layout_margin="20dp"
                android:textSize="20dp" />

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:max="100"
                android:progress="100"
                android:scaleY="5" />

        </LinearLayout>



    </LinearLayout>






</LinearLayout>