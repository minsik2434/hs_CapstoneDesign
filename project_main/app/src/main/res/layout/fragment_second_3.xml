<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/second_previous_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"
            android:layout_gravity="start" />

        <TextView
            android:id="@+id/second_date_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00월00일 ~ 00월00일"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/second_next_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:layout_gravity="end" />
    </LinearLayout>



    <com.example.project_main.CustomTextDrawer
        android:id="@+id/customTextDrawer"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <com.example.project_main.LineChartView
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_marginTop="-50dp"
        android:layout_height="150dp" />

    <com.example.project_main.BarChartView
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_marginTop="-190dp"
        android:layout_height="300dp" />


</LinearLayout>